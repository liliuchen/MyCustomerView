<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_main_rl"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scrollbarStyle="insideInset"
        android:scrollbarThumbVertical="@drawable/shape_scrollbar_thumb"
        android:scrollbarTrackVertical="@drawable/shape_scrollbar_bg"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/activity_main_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="滑动" />
    <Button
        android:id="@+id/activity_main_btn_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="获取当前item" />
</LinearLayout>